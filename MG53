#include <stdio.h>
#include <stdlib.h>

int ffatorial(int n)
{
	if( n <= 1)
	   return 1;
	else
	   return n * ffatorial(n-1);
	    
}

int main()
{
	int i;
	printf("caculo dos fatoriais\n\n");
	
	for(i = 1; i <= 12; i++)
	{
		printf("fatorial de %d:   %2d!\t= %d\n", i, i, ffatorial(i));
	}
  
  printf("\nFim\n\n");
  	
  system("pause");
	
  return 0;
}
